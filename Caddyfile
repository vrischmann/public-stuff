{
	debug
	auto_https off
}

:2015

root * build

rewrite / /about.html

handle /_internal/health {
	respond 200
}

@images {
	path *.png *.avif
}

header @images {
	// 1 day
	Cache-Control "max-age=86400"
}

@assets {
	path *.js *.css
}

header @assets {
	// 1 year
	Cache-Control "public, max-age=31536000, immutable"
}

uri strip_suffix /
try_files {path}.html
file_server {
	browse
}
